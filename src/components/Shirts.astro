---
import { type CollectionEntry } from "astro:content";
type Props = CollectionEntry<"shirts">["data"] & {slug:string};
const { image, title, price, slug } = Astro.props;
---


<a
    class="h-fit py-3 md:h-customice-calc w-full text-white flex flex-col justify-center items-center duration-200 cursor-pointer"
    href={`/product/${slug}`}
>
    <div class="w-fit h-fit md:h-full md:w-full flex items-center">
        <img src={image} class="w-full h-full" alt="" />
    </div>
    <div
        class="w-[70%] md:w-[50%] h-[15%] flex flex-col justify-center border-2 py-1 items-center p-2"
    >
        <h3><b>{title}</b></h3>
        <p class="text-xl text-orange-500">{price}</p>
    </div>
</a>
