---
import { SHIRTS } from "@/conts/shirts";
---

<ul
    class="bg-black w-full h-fit md:h-fit grid grid-cols-2 md:grid-cols-3 place-items-center"
>
    {
        SHIRTS.map(product => (
            <a
                class="h-fit py-3 md:h-full lg:min-h-[500px] w-full text-white flex flex-col justify-center items-center duration-200 cursor-pointer"
                href={`/shirts/${product.id}`}
            >
                <div class="max-h-[250px] max-w-[250px] md:max-w-[400px] md:max-h-[400px] lg: lg: md:h-full md:w-full flex items-center">
                    <img src={product.image} class="w-full h-full" alt="" />
                </div>
                <div class="flex">
                    <h3>
                        <b>{product.title}</b>
                    </h3>
                    <p class="text-md text-orange-500">${product.price}</p>
                </div>
            </a>
        ))
    }
</ul>

