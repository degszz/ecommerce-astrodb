---
import Shirts from "@/components/Shirts.astro";
import { getCollection } from "astro:content";
const shirts = await getCollection("shirts");
---

<ul
    class="bg-black w-full h-fit md:h-custom-calc grid grid-cols-2 md:grid-cols-3 place-items-center"
>
    {shirts.map((shirt) => <Shirts {...shirt.data} slug={shirt.slug}/>)}
</ul>
